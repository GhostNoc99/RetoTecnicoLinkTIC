	"item": [
		{
			"name": "Validar_Registro",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"1.Status code es 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"let requestBody = pm.request.data || pm.request.body.raw;\r",
							"\r",
							"let jsonRequest = {};\r",
							"try {\r",
							"    jsonRequest = JSON.parse(requestBody);\r",
							"} catch (e) {\r",
							"    console.log(\"El body no es JSON válido\");\r",
							"}\r",
							"\r",
							"let responseData = pm.response.json();\r",
							"\r",
							"pm.test(\"2.El nombre y el trabajo coinciden con los enviados\", function () {\r",
							"    pm.expect(responseData.name).to.eql(jsonRequest.name);\r",
							"    pm.expect(responseData.job).to.eql(jsonRequest.job);\r",
							"});\r",
							"\r",
							"\r",
							"pm.test(\"3.El ID fue generado\", function () {\r",
							"    pm.expect(responseData.id).to.be.a(\"string\");\r",
							"    pm.expect(responseData.id).to.not.be.empty;\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "x-api-key",
						"value": "reqres-free-v1",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"name\": \"{{name}}\",\r\n  \"job\": \"{{job}}\"\r\n}\r\n/*{\r\n  \"name\": \"jose\",\r\n  \"job\": \"prueba\"\r\n}*/",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://reqres.in/api/users",
					"protocol": "https",
